<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinggq.customer.repository.UserInsuranceRepository">

  <resultMap type="com.xinggq.customer.entity.UserInsurance" id="userInsurance">
    <id property="id" column="id" />
    <result column="user_id" property="userId"/>
    <result column="insurance_id" property="insuranceId"/>
  </resultMap>



  <sql id="base_column">
    id,user_id,insurance_id
  </sql>

  <select id="queryByUserId" parameterType="Long" resultMap="userInsurance">
    select
    <include refid="base_column"/>
    from user_insurance
    where user_id = #{userId}
  </select>

  <insert id="add" parameterType="com.xinggq.customer.entity.UserInsurance" >
    insert into user_insurance
    (user_id,insurance_id)
    values
    (#{userId},#{insuranceId})
  </insert>

  <delete id="deleteByInsranceId" parameterType="Long">
    delete from user_insurance
    where insurance_id =#{insuranceid}
  </delete>

</mapper>
