<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinggq.com.xinggq.customer.repository.UserLoanRepository">

  <resultMap type="com.xinggq.customer.entity.UserLoan" id="userLoan">
    <id property="id" column="id"/>
    <result column="user_id" property="userId"/>
    <result column="loan_id" property="loanId"/>
  </resultMap>

  <sql id="base_column">
		id,user_id,loan_id
	</sql>

  <select id="queryByUserId" parameterType="Long" resultMap="userLoan">
    select
    <include refid="base_column"/>
    from user_loan
    where user_id = #{userid}
  </select>

  <insert id="add" parameterType="com.xinggq.customer.entity.UserLoan" >
    insert into user_loan
    (user_id,loan_id)
    values
    (#{userId},#{loanId})
  </insert>

  <delete id="deleteByloanid" parameterType="Long">
    delete from user_loan
    where loan_id =#{loanid}
  </delete>

</mapper>
